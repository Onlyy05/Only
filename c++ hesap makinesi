#include <iostream>
using namespace std;

int main() {
    double sayi1, sayi2;
    char islem;

    cout << "Birinci sayiyi giriniz: ";
    cin >> sayi1;

    cout << "Ikinci sayiyi giriniz: ";
    cin >> sayi2;

    cout << "Yapmak istediginiz islemi giriniz (+, -, *, /): ";
    cin >> islem;

    if (islem == '+') {
        cout << sayi1 + sayi2 << endl;
    } 
    else if (islem == '-') {
        cout << sayi1 - sayi2 << endl;
    } 
    else if (islem == '*') {
        cout << sayi1 * sayi2 << endl;
    } 
    else if (islem == '/') {
        if (sayi2 == 0) {
            cout << "Tanimsiz (0'a bolme yapilamaz)" << endl;
        } else {
            cout << sayi1 / sayi2 << endl;
        }
    } 
    else {
        cout << "Gecersiz islem girdiniz!" << endl;
    }

    return 0;
}